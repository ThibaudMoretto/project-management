{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "module": "CommonJS",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
  },
  "include": ["src/"],
}
